{% extends "layout.html.jinja" %}
{% block title %}Home{% endblock %}
{% block page_title %}
<h1>Playlist</h1>
{% endblock %}
{% block content %}
<div class="pure-g horizontal-double-content" style="padding: 2em;">
    <div class="pure-u-5-12 song-info-feild">
        <div class="pure-g ">
            <div class="pure-u-1-5 small-playlist-icon">
                Playlist icon
            </div>
            <div class="pure-u-1-5 user-icon">
                User icon
            </div>
            <div class="pure-u-1-3">
                Name of playlist 
                <div>
                    Stars
                </div>
            </div>
        </div>
        <div class = "songlst">
            {% for song in songs %}
                {% include "songcard.html.jinja" ignore missing with context %}
            {% endfor %}
        </div>
        
    </div>
    <div class="pure-u-5-12 horizontal-double-content" >
        <div class="pure-g song-feild">
            <div class="pure-u-1-5 small-playlist-icon">
                song icon
            </div>
            <div class="pure-u-1-3">
                Name of song
            </div>
        </div>
        <div class = "commentlst">
            <button class = "newcomment" onclick=" toggleComment('comment-create-box')">
                <div class="pure-g commentblock">
                    <div class="pure-u-4-10 user-icon ">
                        +
                    </div>
                    <div class="pure-u-6-10 comment">
                        Add a comment
                    </div>
                </div>
            </button>
        
        <div>
            {% for comment in comments %}
                {% include "commentcard.html.jinja" ignore missing with context %}
            {% endfor %}
        </div>
    </div>
    </div>
</div>
<div id = "comment-create-box" style="display: none;" >
    <form class="pure-form pure-form-stacked">
        <fieldset>
            <legend>Leave a comment</legend>
            <textarea rows="4" cols="100" class="pure-input-1" placeholder="Write somthing"></textarea>
            <button type="submit" class="pure-button pure-button-primary">Post</button>
        </fieldset>
    </form>
</div>
<script>
    function toggleComment(id) {
    var x = document.getElementById(id);
    if (x.style.display === "none") {
        x.style.display = "block";
    } else {
        x.style.display = "none";
    }
    }
</script>
{% endblock %}