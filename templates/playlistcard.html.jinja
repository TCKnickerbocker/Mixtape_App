<div class="pure-u-1 pure-u-md-1-5 pure-u-lg-1-8 playlist-container">
    <button class = " playlist">
        <div class = "playlist-icon">
            {{ playlist.image }}
        </div>
        <div class = "playlist-name">
            {{ playlist.name }}
        </div>
        <div class = "playlist-rating">
            {{ playlist.rating }}
        </div>
        <div class = "pure-g playlist-tags">
            {% for tag in playlist.tags %}
            <div class = "tag pure-u-1-3">
            {{tag}} 
            </div>
            {% endfor %}
        </div>
    </button >
    <div class = "playlist-edit" style="display: none;" >
        <button class="playlist" >Edit</button>
    </div>
</div>