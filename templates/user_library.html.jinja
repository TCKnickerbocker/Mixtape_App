{% extends "layout.html.jinja" %}
{% block title %}Library{% endblock %}
{% block page_title %}
<h1>My Library</h1>
{% endblock %}
{% block content %}
 {% if user_session != None %}
<div class="pure-menu pure-menu-horizontal">
    <ul class="pure-menu-list">
        <li class="pure-menu-item">
            <button class="pure-menu-link tab">My Playlists</button>
        </li>
        <li class="pure-menu-item">
            <button class="pure-menu-link tab">Saved Playlists</button>
        </li>
        <li class="pure-menu-item">
            <button class="pure-menu-link tab">Suprise Me</button>
        </li>
    </ul>
</div>
<div class="pure-u-1 pure-u-md-1-5 pure-u-lg-1-8 playlist-container">
    <form class="pure-form pure-u-1" method = "GET" action = "/edit-playlist">
                   
    <button  type="submit" class = "playlist">
        <h1>+</h1>  
    </button >
     </form>
</div>

    {% for playlist in playlists %}
        {% include "playlistcard.html.jinja" ignore missing with context %}
    {% endfor %}
</div>
{% else %}
    <p> You can't access this page with out loging in</p>
    <a href="/login" class="pure-menu-link">Log in</a>
{% endif %}
{% endblock %}